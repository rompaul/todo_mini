.calendar {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.weekdays {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
}

.days {
  display: flex;
  flex-wrap: wrap;
}

.days text {
  width: 14.28%;
  text-align: center;
  padding: 10rpx 0;
}

.days .current {
  color: #1aad19;
  font-weight: bold;
}

.days .selected {
  background-color: #1aad19;
  color: white;
  border-radius: 50%;
}
